<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store </title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= form_tag store_path, :class => :locale do %>
        <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), :onchange => 'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('.locale input').hide()"%>
    <% end %>
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title')%>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
          <%end%>
        <%end%>
      </div>
      <% if (not session[:counter].nil? and session[:counter] > 5) %> 
        <p> This page has been visited <%= pluralize(session[:counter],"time")%> </p>
      <%end%>
      
      <p> Time: <%= @time = Time.now %><br/><br/> </p>
      <a href="/"><%= t('.home') %></a><br/>
      <a href="http://www..../faq"><%= t('.questions') %></a><br/>
      <a href="http://www..../news"> <%= t('.news') %></a><br/>
      <a href="http://www..../contact"><%= t('.contact') %></a><br/>

      <% if session[:user_id] %> 
        <br/>
        <a href="/orders">Orders</a><br/>
        <%= link_to 'Products', products_path %><br/>
        <%= link_to 'Users', users_path %><br/>
        <br/>
        <%= button_to 'Logout', logout_path, :method => :delete %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>